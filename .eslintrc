{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mongo": true
  },

  "rules": {
    "comma-dangle": [2,"always"],
    "no-cond-assign": [2,"always"],
    "no-constant-condition": 2,
    "no-control-regex": 2,
    "no-debugger": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty-character-class": 2,
    "no-empty": 2,
    "no-ex-assign": 2,
    "no-extra-boolean-cast": 2,
    "no-extra-parens": [2,"all"],
    "no-extra-semi": 2,
    "no-func-assign": 2,
    "no-inner-declarations": [2,"both"]
  },
  "parserOptions": {
   "ecmaVersion": 6
 }

}
